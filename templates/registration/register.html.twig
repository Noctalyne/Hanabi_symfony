{% extends 'base.html.twig' %}
{# {% extends ' ' %} #}

{% block title %}S'inscrire{% endblock %}


{% block body %}
	<h1>Register</h1>
	
	{{ form_errors(registrationForm) }}

	
	{{ form_start(registrationForm) }}{# Debut du formulaire #}

	{# Chaque for_row represente un imput et sont label #}

	{# {{ form_row(registrationForm.roles) }} #}

	{{ form_row(registrationForm.username, {
        label: 'username'
    }) }}

	{{ form_row(registrationForm.userEmail, {
        label: 'Email'
    }) }}

	{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}

	{{ form_row(registrationForm.agreeTerms) }}

	<button type="submit" class="btn">Inscription</button>

	{{ form_end(registrationForm) }}{# FIN DU FORMULAIRE #}
{% endblock %}
