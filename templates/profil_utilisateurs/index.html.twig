{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}

{% block body %}
    <h1>Clients index</h1>

    <a href="{{ path('app_profil_utilisateurs_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Roles</th>
                <th>Email</th>
                <th>Username</th>
                <th>Password</th>
                <th>Nom client</th>
                <th>Prenom client</th>
                <th>Telephone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.roles ? client.roles|json_encode : '' }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.username }}</td>
                <td>{{ client.password }}</td>
                <td>{{ client.nomClient }}</td>
                <td>{{ client.prenomClient }}</td>
                <td>{{ client.telephone }}</td>
                <td>
                    <a href="{{ path('app_profil_utilisateurs_show', {'id': client.id}) }}">Voir</a>
                    <a href="{{ path('app_profil_utilisateurs_edit', {'id': client.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">/!\  Aucun clients trouv√©s</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin') }}">Retour</a>


{% endblock %}
