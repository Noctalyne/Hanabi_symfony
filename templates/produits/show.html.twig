{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1>Fiche produit : {{ produit.nomProduit }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom produit</th>
                <td>{{ produit.nomProduit }}</td>
            </tr>
            <tr>
                <th>Description produit</th>
                <td>{{ produit.descriptionProduit }}</td>
            </tr>
            <tr>
                <th>Image produit</th>
                <td><img src="{{ asset('images/produits/' ~ produit.imgProduit) }}" alt="photo du produit :" ~ {{produit.nomProduit }}></td>
            </tr>
            <tr>
                <th>Prix produit</th>
                <td>{{ produit.prixProduit }}</td>
            </tr>
            <tr>
                <th>Quantité en stock</th>
                <td>{{ produit.quantStock }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produits_index') }}">Retour à la liste</a>

    <a href="{{ path('app_produits_edit', {'id': produit.id}) }}">Modifier</a>

    {{ include('produits/_delete_form.html.twig') }}
{% endblock %}
