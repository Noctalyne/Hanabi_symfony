{% extends 'base.html.twig' %}

{% block title %}Adresses index{% endblock %}

{% block body %}
    <h1>Adresses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumAdresse</th>
                <th>RueAdresse</th>
                <th>ComplementAdresse</th>
                <th>VilleAdresse</th>
                <th>CodePostpAdressse</th>
                <th>PaysAdresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adress in adresses %}
            <tr>
                <td>{{ adress.id }}</td>
                <td>{{ adress.numAdresse }}</td>
                <td>{{ adress.rueAdresse }}</td>
                <td>{{ adress.complementAdresse }}</td>
                <td>{{ adress.villeAdresse }}</td>
                <td>{{ adress.codePostpAdressse }}</td>
                <td>{{ adress.paysAdresse }}</td>
                <td>
                    <a href="{{ path('app_adresses_show', {'id': adress.id}) }}">show</a>
                    <a href="{{ path('app_adresses_edit', {'id': adress.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adresses_new') }}">Create new</a>
{% endblock %}
